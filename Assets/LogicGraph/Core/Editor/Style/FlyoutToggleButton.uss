FlyoutToggleButton{
	height: 48px;
	padding-left: 4px;
	border-bottom-left-radius: 6px;
	border-bottom-right-radius: 6px;
	border-top-left-radius: 6px;
	border-top-right-radius: 6px;
	flex-direction: row;
	align-items: center;
	background-color: rgba(42,42,42,255);
	
}

FlyoutToggleButton > #tabIcon{
	width: 30px;
	height: 30px;
}

FlyoutToggleButton > #contentLabel{
	padding: 8px;
	font-size: 16px;
	-unity-text-align: middle-center;
}

FlyoutToggleButton.select{
	background-color: rgba(32,32,32,255);
}
FlyoutToggleButton.pointEnter{
	background-color: rgba(26,26,26,255);
}

FlyoutToggleButton > #contentLabel.hide{
	display: none;
}
FlyoutToggleButton.hide{
	width: 48px;
    align-self: center;
	justify-content: center;
	padding-left: 0px;
}

#tabIcon.overview{
	background-image: resource("flyout_all");
}

#tabIcon.load{
	background-image: resource("flyout_load");
}
#tabIcon.graph{
	background-image: resource("flyout_graph");
}
#tabIcon.save{
	background-image: resource("flyout_save");
}